{# templates/registration/index.html.twig #}
{% extends 'base.html.twig' %}
{%
block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-10 ml-md-auto">
				<div class="card bg-light mb-3 mt-5" style="width: 800px">
					<div class="card-body">
						<div class="card-header mb-3">Редактировать пользователя</div>
						<img src="{{ asset('uploads/pictures/' ~ human.picture) }}" height="100px">

						{{ form_start(form) }}
						{{ form_widget(form) }}
						<input class="btn btn-primary" type="submit" value="Сохранить"/>
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
